
rules_version = '2';
service cloud.firestore {
  
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || request.auth.token.email == 'marrci448@gmail.com';
      allow create: if request.auth.uid == userId;
      // Admins can list all users.
      allow list: if request.auth.token.email == 'marrci448@gmail.com';
    }
    
    match /users/{userId}/orders/{orderId} {
      allow read, create, update: if request.auth.uid == userId || request.auth.token.email == 'marrci448@gmail.com';
      // Only admin can list orders for a *specific* user
      allow list: if request.auth.token.email == 'marrci448@gmail.com';
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, list, update: if request.auth.uid == userId;
      // Admin can create notifications for any user.
      allow create: if request.auth.token.email == 'marrci448@gmail.com';
    }
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth.token.email == 'marrci448@gmail.com';
    }
    
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth.token.email == 'marrci448@gmail.com';
    }

    match /topUpRequests/{requestId} {
        allow read, create, update: if request.auth.uid == resource.data.userId || request.auth.token.email == 'marrci448@gmail.com';
        allow list: if request.auth.token.email == 'marrci448@gmail.com';
    }

    // This rule allows the collectionGroup query for TopBuyersList.
    // Any authenticated user can read all orders, but cannot write.
    match /{path=**}/orders/{orderId} {
      allow get, list: if request.auth.token.email == 'marrci448@gmail.com';
      allow create, update, delete: if false; // Explicitly deny writes
    }
  }
}
