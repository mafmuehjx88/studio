
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique identifier for the user, typically from Firebase Auth."
        },
        "username": {
          "type": "string",
          "description": "The user's chosen display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "walletBalance": {
          "type": "number",
          "description": "The user's current wallet balance for general purchases."
        },
        "smileCoinBalance": {
          "type": "number",
          "description": "The user's current wallet balance specifically for Smile Coin purchases."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["uid", "username", "email", "walletBalance", "smileCoinBalance", "createdAt"]
    },
    "Announcement": {
      "title": "Announcement",
      "description": "Represents a site-wide announcement.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the announcement."
        },
        "content": {
          "type": "string",
          "description": "The main content of the announcement."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the announcement was created."
        }
      },
      "required": ["title", "content", "createdAt"]
    },
    "SmileCode": {
      "title": "Smile Code",
      "description": "Represents a redeemable Smile.One code.",
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "The actual redeemable code."
        },
        "productId": {
          "type": "string",
          "description": "The ID of the product this code is for."
        },
        "productName": {
          "type": "string",
          "description": "The name of the product."
        },
        "price": {
            "type": "number",
            "description": "The price in Smile Coins."
        },
        "isUsed": {
          "type": "boolean",
          "description": "Whether the code has been used."
        },
        "usedBy": {
          "type": "string",
          "description": "The UID of the user who used the code."
        },
        "usedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the code was used."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the code was created."
        }
      },
      "required": ["code", "productId", "isUsed", "price", "productName"]
    }
  },
  "auth": {
    "providers": ["email_password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user, keyed by their auth UID."
    },
    "/announcements/{announcementId}": {
      "schema": {
        "$ref": "#/entities/Announcement"
      },
      "description": "Stores site-wide announcements."
    },
    "/settings/marquee": {
        "schema": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                }
            }
        },
        "description": "Stores the scrolling marquee text for the homepage."
    },
    "/smileCodes/{codeId}": {
        "schema": {
            "$ref": "#/entities/SmileCode"
        },
        "description": "Stores available Smile.One codes."
    }
  }
}
